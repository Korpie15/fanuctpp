{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Fanuc LS Language (Simplified UDL)",
    "scopeName": "source.fanuctp_ls",
    "fileTypes": [
      "ls"
    ],
    "patterns": [
        { "include": "#delimiters" },
        { "include": "#comments" },
        { "include": "#numbers" },
        { "include": "#operators" },
        { "include": "#keywords1" },
        { "include": "#keywords2" },
        { "include": "#keywords3" },
        { "include": "#keywords4" },
        { "include": "#strings" }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.udl-00.fanuctp_ls",
                    "match": "00!"
                },
                {
                    "name": "comment.line.udl-01.fanuctp_ls",
                    "match": "01"
                },
                {
                    "name": "comment.line.udl-02.fanuctp_ls",
                    "match": "02;"
                },
                {
                    "name": "comment.line.udl-03.fanuctp_ls",
                    "match": "03--eg:"
                },
                {
                    "name": "comment.line.udl-04.fanuctp_ls",
                    "match": "04;"
                },
                {
                    "name": "comment.line.double-dash.fanuctp_ls",
                    "match": "(--.*)$"
                },
                {
                    "name": "comment.line.remark.fanuctp_ls",
                    "match": "(?<=:\\s*)(!.*)$"
                },
                {
                    "name": "comment.line.slash.fanuctp_ls",
                    "match": "//(.*)$"
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.fanuctp_ls",
                    "match": "\\b\\d+\\.?\\d*\\b"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.fanuctp_ls",
                    "match": "(\\+|\\-|\\*|\\/|\\=|\\!|\\<|\\>|\\<\\>|\\>\\=|\\<\\=)"
                }
            ]
        },
        "keywords1": {
            "patterns": [
                {
                    "name": "keyword.udl-1.fanuctp_ls",
                    "match": "\\b(/PROG|/ATTR|/MN|/POS|/END)\\b"
                }
            ]
        },
        "keywords2": {
            "patterns": [
                {
                    "name": "keyword.udl-2.fanuctp_ls",
                    "match": "\\bLBL\\b"
                }
            ]
        },
        "keywords3": {
            "patterns": [
                {
                    "name": "keyword.udl-3.fanuctp_ls",
                    "match": "\\b(L|J|CALL|JMP|IF|ELSE|ENDIF|FOR|ENDFOR|UFRAME_NUM|UTOOL_NUM|UALM|LPOS|JPOS|THEN|END_IF|UFRAME)\\b"
                }
            ]
        },
        "keywords4": {
            "patterns": [
                {
                    "name": "keyword.udl-4.fanuctp_ls",
                    "match": "\\b(R|AR|PR|P|UF|DI|DO|RI|RO|GI|GO|UI|UO)\\b"
                }
            ]
        },
        "delimiters": {
            "patterns": [
                {
                    "name": "punctuation.bracket.square.fanuctp_ls",
                    "begin": "(\\[)",
                    "end": "(\\])",
                    "captures": {
                        "1": { "name": "punctuation.bracket.square.character.fanuctp_ls" },
                        "2": { "name": "punctuation.bracket.square.character.fanuctp_ls" }
                    },
                    "contentName": "meta.content.bracket.square.fanuctp_ls"
                },
                {
                    "name": "punctuation.bracket.parenthesis.fanuctp_ls",
                    "begin": "(\\()",
                    "end": "(\\))",
                    "captures": {
                        "1": { "name": "punctuation.bracket.parenthesis.character.fanuctp_ls" },
                        "2": { "name": "punctuation.bracket.parenthesis.character.fanuctp_ls" }
                    },
                    "contentName": "meta.content.bracket.parenthesis.fanuctp_ls"
                },
                {
                    "name": "punctuation.delimiter.udl-1.fanuctp_ls",
                    "match": "00\\[|02\\]"
                },
                {
                    "name": "punctuation.delimiter.udl-2.fanuctp_ls",
                    "match": "03\\[|05\\]"
                },
                {
                    "name": "punctuation.delimiter.udl-3.fanuctp_ls",
                    "match": "06\\(|08\\)"
                },
                {
                    "name": "punctuation.delimiter.udl-4.fanuctp_ls",
                    "match": "09\\(|11\\)"
                },
                {
                    "name": "punctuation.delimiter.udl-5.fanuctp_ls",
                    "match": "12\\(|14\\)"
                },
                {
                    "name": "punctuation.delimiter.udl-6.fanuctp_ls",
                    "match": "15\\(|17\\)"
                },
                {
                    "name": "punctuation.delimiter.udl-7.fanuctp_ls",
                    "match": "18\\(|20\\)"
                },
                {
                    "name": "punctuation.delimiter.udl-8.fanuctp_ls",
                    "match": "21\\(|23\\)"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.single.fanuctp_ls",
                    "begin": "'",
                    "end": "'",
                    "captures": {
                        "0": { "name": "punctuation.definition.string.quote.fanuctp_ls" }
                    }
                },
                {
                    "name": "string.quoted.double.fanuctp_ls",
                    "begin": "\"",
                    "end": "\"",
                    "captures": {
                        "0": { "name": "punctuation.definition.string.quote.fanuctp_ls" }
                    }
                }
            ]
        }
    }
}
